#!/usr/bin/env ruby
require_relative '..lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
turn(board)
puts "Where would you like to go?"
input = gets.strip
index = input_to_index(input)
if !(valid_move?(board, input))
    turn(board)
end
else move(board, index)
end
display_board(board)
